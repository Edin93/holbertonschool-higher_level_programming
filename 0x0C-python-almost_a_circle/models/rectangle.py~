#!/usr/bin/python3
"""
This module contains a single class, Rectangle.
"""
from .base import Base


class Rectangle(Base):
    """
    Rectangle class that inherits from Base class.
    """

    def __init__(self, width, height, x=0, y=0, id=None):
        """
        Class constructor.
        """
        self.width = width
        self.height = height
        self.x = x
        self.y = y
        super().__init__(id)

    @property
    def height(self):
        """
        Returns the instance's height
        """
        return self.__height

    @setter
    def height(self, height):
        """
        Set the instance's height value.
        """
        self.__height = height

    @property
    def width(self):
        """
        Returns the instance widht.
        """
        return self.__width

    @setter
    def width(self, width):
        """
        Set the instance width value.
        """
        self.__width = width

    @property
    def x(self):
        """
        Returns the instance x value.
        """
        return self.__x

    @setter
    def x(self, x):
        """
        Set the instance's x value.
        """
        self.__x = x

    @property
    def y(self):
        """
        Returns the instance's y value.
        """
        return self.__y

    @setter
    def y(self, y):
        """
        Set the instance y value.
        """
        self.__y = y
